<?xml version="1.0"?>
<robot name="walker" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="white">
      <color rgba="0.90 0.90 0.90 1.00"/>
  </material>

  <xacro:property name="PI" value="3.141592"/>

  <xacro:macro name="create_link" params="name">
    <link name="${name}">
      <visual>
        <geometry>
        </geometry>
        <material name="white"/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="create_joint" params="parent child name x:=0 y:=0 z:=0 axis angle_upper:=120 angle_lower:=-120">
    <joint name="${name}" type="revolute">
      <parent link="${parent}"/>
      <child link="${child}"/>
      <origin xyz="${x/1000} ${y/1000} ${z/1000}"/>
      <axis xyz="${axis}"/>
      <limit
        lower="${angle_lower*PI/180}"
        upper="${angle_upper*PI/180}"/>
    </joint>
  </xacro:macro>

  <link name="world"/>

  <joint name="world_base_joint" type="fixed">
    <parent link="world"/>
    <child link="base"/>
  </joint>

  <xacro:create_link name="waist"/>
    <xacro:create_joint parent="waist" child="r_I" name="r_hip_pitch" axis="1 0 0"/>
    <xacro:create_link name="r_I"/>
      <xacro:create_joint parent="r_I" child="r_Ro" name="r_hip_yaw" axis="0 1 0"/>
      <xacro:create_link name="r_Ro"/>
        <xacro:create_joint parent="r_Ro" child="r_Ha" name="r_knee" axis="0 1 0"/>
        <xacro:create_link name="r_Ha"/>
          <xacro:create_joint parent="r_Ha" child="r_Ni" name="r_ankle_pitch" axis="0 1 0"/>
          <xacro:create_link name="r_Ni"/>
            <xacro:create_joint parent="r_Ni" child="r_Ho" name="r_ankle_yaw" axis="0 1 0"/>
            <xacro:create_link name="r_Ho"/>

  <xacro:create_joint parent="waist" child="l_I" name="l_hip_pitch" axis="1 0 0"/>
  <xacro:create_link name="l_I"/>
    <xacro:create_joint parent="l_I" child="l_Ro" name="l_hip_yaw" axis="0 1 0"/>
    <xacro:create_link name="l_Ro"/>
      <xacro:create_joint parent="l_Ro" child="l_Ha" name="l_knee" axis="0 1 0"/>
      <xacro:create_link name="l_Ha"/>
        <xacro:create_joint parent="l_Ha" child="l_Ni" name="l_ankle_pitch" axis="0 1 0"/>
        <xacro:create_link name="l_Ni"/>
          <xacro:create_joint parent="l_Ni" child="l_Ho" name="l_ankle_yaw" axis="0 1 0"/>
          <xacro:create_link name="l_Ho"/>
</robot>
